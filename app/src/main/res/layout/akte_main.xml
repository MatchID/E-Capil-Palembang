<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<include
    android:id="@+id/toolbar"
    layout="@layout/toolbar" />

<LinearLayout
    android:id="@+id/ll"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">



          <TableRow>
              <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_NamaPemohon"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >

                  <EditText
                      android:id= "@+id/txtNamaPemohon"
                      android:layout_width="170dip"
                      android:layout_height="wrap_content"
                      android:singleLine= "true"
                      android:textSize="12dip"
                      android:hint="Nama Pemohon*" />
              </android.support.design.widget.TextInputLayout >
              <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_NIK"
                  android:layout_width="170dip"
                  android:layout_height="wrap_content" >

                  <EditText
                      android:id= "@+id/txtNIK"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:singleLine= "true"
                      android:textSize="12dip"
                      android:hint="NIK*"
                      android:inputType="number" />
              </android.support.design.widget.TextInputLayout >

          </TableRow>

          <TableRow>
              <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_NoKK"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >

                  <EditText
                      android:id= "@+id/txtNoKK"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:singleLine= "true"
                      android:textSize="12dip"
                      android:hint="No KK"
                      android:inputType="number" />
              </android.support.design.widget.TextInputLayout >
              <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_NamaAyah"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >

                  <EditText
                      android:id= "@+id/txtNamaAyah"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:singleLine= "true"
                      android:textSize="12dip"
                      android:hint="Nama Ayah" />
              </android.support.design.widget.TextInputLayout >

          </TableRow>



        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_NamaIbu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id= "@+id/txtNamaIbu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine= "true"
                    android:textSize="12dip"
                    android:hint="Nama Ibu" />
            </android.support.design.widget.TextInputLayout >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_TTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id= "@+id/txtTTL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine= "true"
                    android:textSize="12dip"
                    android:hint="TTL" />
            </android.support.design.widget.TextInputLayout >
        </TableRow>






            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id= "@+id/txtAlamat"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:singleLine= "true"
                    android:textSize="12dip"
                    android:hint="Alamat" />
            </android.support.design.widget.TextInputLayout >


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_telpon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id= "@+id/txtTelpon"
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            android:singleLine= "true"
                            android:textSize="12dip"
                            android:hint="Nomor Telepon/HP"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout >


                    <TextView
                        android:layout_width="358dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="* Data Pembuat Akte"
                        android:id="@+id/textView8" />

                    <TableRow>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:textSize="11dip"
                            android:text="Foto Kartu Keluarga "
                            android:id="@+id/btKK" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dip"
                            android:textSize="11dip"
                            android:text="Foto KTP-el Ibu "
                            android:id="@+id/btKTPIbu" />
                    </TableRow>
                    <TableRow>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:text="Foto KTP-el Ayah "
                            android:textSize="11dip"
                            android:layout_marginTop="10dip"
                            android:id="@+id/btKTPAyah" />



                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:text="Foto Buku Nikah \n Halaman Depan"
                            android:textSize="11dip"
                            android:layout_marginTop="3dip"
                            android:id="@+id/btBukuNikah1" />
                    </TableRow>

                    <TableRow>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dip"
                            android:text="Foto Buku Nikah\n Halaman Isi "
                            android:textSize="11dip"
                            android:layout_marginTop="10dip"
                            android:id="@+id/btBukuNikah2" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dip"
                            android:textSize="10dip"
                            android:layout_marginTop="3dip"
                            android:text="Foto Buku Nikah\n Halaman Ttd\n Pejabat Berwenang "
                            android:id="@+id/btBukuNikah3" />

                    </TableRow>

                    <TableRow>

                    </TableRow>
                    <TableRow>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dip"
                            android:text="Foto Surat \nKeterangan Kelahiran "
                            android:textSize="11dip"
                            android:layout_marginTop="10dip"
                            android:id="@+id/btSKL" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dip"
                            android:textSize="11dip"
                            android:layout_marginTop="10dip"
                            android:text="Foto SPTJM Kebenaran\n Suami Istri"
                            android:id="@+id/btSPTJM" />


                    </TableRow>

        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dip"
                android:textSize="11dip"
                android:layout_marginTop="10dip"
                android:text="Foto SPTJM Kebenaran\n Data Kelahiran "
                android:id="@+id/btSPTJM_Istri" />


        </TableRow>

                </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>

            <Button
                android:layout_width="130dip"
                android:layout_height="90dip"
                android:text="Download SPTJM Kebenaran\n Suami Istri Untuk Pemohon\n Yang tidak Memiliki\n Akte Perkawinan\n / Buku Nikah"
                android:textSize="8dip"
                android:id="@+id/btnFormulir2" />

                <Button
                    android:layout_width="130dip"
                    android:layout_height="90dip"
                    android:text="Download SPTJM Kebenaran\n Data Kelahiran Untuk Pemohon\n Yang tidak Memiliki\n Surat Ket Lahir\n dari RS /Bidan"
                    android:textSize="8dip"
                    android:id="@+id/btnFormulir3" />

                <Button
                    android:layout_width="80dip"
                    android:layout_height="60dip"
                    android:textSize="10dip"
                    android:text="Download \nFormulir"
                    android:id="@+id/btnFormulir" />


                <Button
                    android:layout_width="80dip"
                    android:layout_height="60dip"
                    android:textSize="10dip"
                    android:text="Download \nFormulir"
                    android:id="@+id/btnFormulir4" />




            </TableRow>
        </TableLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/imageView" />

        </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

</LinearLayout>

</RelativeLayout>