<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_below="@+id/toolbar" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11dip"
            android:hint="NIK Pemohon" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtnokk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11dip"
            android:hint="No KK  "
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11dip"
            android:hint="Nama Pemohon" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name4"
        android:layout_width="match_parent"
        android:layout_marginTop="1dip"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txthp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11dip"

            android:hint="No HP  "
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan : "
        android:id="@+id/ket1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perubahan Alamat / Perubahan Status Perkawinan / Perubahan Pekerjaan / dan lain-lain "
        android:id="@+id/ket2" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtketerangan"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:singleLine="true"
            android:textSize="11dip"
            android:inputType="textMultiLine"
            android:hint="Keterangan " />
    </android.support.design.widget.TextInputLayout>







    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="10dip"
        android:text="Masukan Foto KTP Lama"
        android:background="@drawable/tombol"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="14dip"
        android:id="@+id/buttonChoose" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="10dip"
        android:text="Masukan Foto Kartu Keluarga Terbaru "
        android:background="@drawable/tombol"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:id="@+id/buttonChoose2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KTP Lama........... "
        android:layout_marginTop="14dip"
        android:id="@+id/pesan1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto Kartu Keluarga Terbaru ..... "
        android:id="@+id/pesan2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/imageView" />


</LinearLayout>
    </ScrollView>

</LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dip"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id2">
    </com.google.android.gms.ads.AdView>
    </RelativeLayout>