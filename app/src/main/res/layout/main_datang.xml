<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNamaKK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtnama"
                android:hint="Nama  Pemohon  "
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNamaKK2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNoKK"
                android:hint="No KK"
                android:textSize="15dp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNikx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNIK"
                android:hint="NIK"
                android:textSize="15dp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNikx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Jumlah"
                android:lines="5"
                android:gravity="top"
                android:hint="Jumlah Data Anggota Keluarga yang Pindah"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNoHP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNoHP"
                android:hint="Nomor HP"
                android:textSize="15dp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKPWNI dari Capil Asal"
            android:textSize="13dp"
            android:id="@+id/pesan1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto KK terbaru"
            android:textSize="13dp"
            android:id="@+id/pesan2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto KTP-el"
            android:textSize="13dp"
            android:id="@+id/pesan3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol"
            android:text="Masukan Foto SKPWNI Dari Capil Asal  "
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="16dip"
            android:id="@+id/button8" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol"
            android:text="Masukan Foto Kartu Keluarga Terbaru"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:id="@+id/button9" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol"
            android:text="Masukan Foto KTP-el"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:id="@+id/button10" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>